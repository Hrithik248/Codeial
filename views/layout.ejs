<html>
    <head>
        <title>
            <%=title%>
        </title>
        <script  src="https://kit.fontawesome.com/b3348ae33f.js"crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
        <link rel="stylesheet" href="<%=assetPath('scss/layout.css')%>">
        <link rel="stylesheet" href="<%=assetPath('scss/header.css')%>">
        <link rel="stylesheet" href="<%=assetPath('scss/footer.css')%>">
        <%-style-%>
    </head>
    <body>
        <%-include('_header');-%>
        <main>
            <%-body-%>
        </main>
        <%-include('_footer');-%>
        <%-script-%>
        <script>
            <%if(flash.success&&flash.success.length>0){%>
                new Noty({
                    theme:'relax',
                    text: '<%=flash.success%>',
                    type:'success',
                    layout:'topCenter',
                    timeout:1500
                }).show();
            <%}else if(flash.error&&flash.error.length>0){%>
                new Noty({
                    theme:'relax',
                    text: '<%=flash.error%>',
                    type:'error',
                    layout:'topCenter',
                    timeout:1500
                }).show();
            <%}%>
        </script>
    </body>
</html>